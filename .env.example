# ==============================================
# GitSecureOps Environment Variables
# ==============================================
# Copy this file to .env.local and fill in the values
# All VITE_ prefixed vars are available in the frontend

# GitHub OAuth App credentials
# Create at: https://github.com/settings/developers
VITE_GITHUB_CLIENT_ID=your-github-client-id

# GitHub Client Secret (used only in Azure Function backend)
# GH_WEB_APP_SECRET=your-github-client-secret

# Azure Function App URL (backend API)
# Local dev: http://localhost:7071
# Production: https://your-function-app.azurewebsites.net
VITE_FUNCTION_APP_URL=http://localhost:7071

# Azure Static Web App URL
# Local dev: http://localhost:5173
# Production: https://your-static-web-app.azurestaticapps.net
VITE_STATIC_WEB_APP_URL=http://localhost:5173

# GitHub OAuth redirect URI (must match GitHub App settings)
# Local dev: http://localhost:7071/api/github-callback
# Production: https://your-function-app.azurewebsites.net/api/github-callback
VITE_GITHUB_REDIRECT_URI=http://localhost:7071/api/github-callback
